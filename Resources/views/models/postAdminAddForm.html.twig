{% extends 'FulgurioLightCMSBundle::adminBase.html.twig' %}

{% block content %}
<form action="{{ action }}" method="post">
	<fieldset>
		<legend>{{ legend|trans({}, 'admin') }}</legend>
{% if form.vars.errors is not empty %}
			<div class="alert alert-error">
{%   for error in form.vars.errors %}{{ error.messageTemplate|trans({}, 'admin') }}<br />{% endfor %}
			</div>
{% endif %}
		<div class="row">
			<div class="span7">
				<div class="control-group">
					<label class="control-label" for="p_title">{% trans from "admin" %}fulgurio.lightcms.pages.add_form.title_label{% endtrans %}</label>
					<div class="controls">
						<input type="text" id="p_title" class="input-xlarge" name="{{ form.title.vars.full_name }}" value="{{ form.title.vars.value }}" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="p_content">{% trans from "admin" %}fulgurio.lightcms.pages.add_form.content_label{% endtrans %}</label>
					<div class="controls">
						<textarea class="input-xlarge wysiwyg" id="p_content" cols="" rows="8" name="{{ form.content.vars.full_name }}">{{ form.content.vars.value }}</textarea>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="p_status">{% trans from "admin" %}fulgurio.lightcms.pages.add_form.status_label{% endtrans %}</label>
					<div class="controls">
						<select name="{{ form.status.vars.full_name }}" class="input-xlarge" id="p_status" >
{% for choice in form.status.vars.choices %}
							<option value="{{ choice.value }}"{% if choice.value in form.status.vars.value %} selected="selected"{% endif %}>{{ ('fulgurio.lightcms.pages.add_form.status.' ~ choice.label)|trans({}, 'admin') }}</option>
{% endfor %}
						</select>
					</div>
				</div>
			</div>
			<div class="well span4 pull-right">
				<div class="control-group">
					<label class="control-label" for="p_meta_keywords">{% trans from "admin" %}fulgurio.lightcms.pages.add_form.meta_keywords_label{% endtrans %}</label>
					<div class="controls">
						<input type="text" id="p_meta_keywords" class="input-xlarge" name="{{ form.meta_keywords.vars.full_name }}" value="{% if form.meta_keywords.vars.value %}{{ form.meta_keywords.vars.value }}{% else %}{% if pageMetas['meta_keywords'] is defined %}{{ pageMetas['meta_keywords'].metaValue }}{% endif %}{% endif %}" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="p_meta_description">{% trans from "admin" %}fulgurio.lightcms.pages.add_form.meta_description_label{% endtrans %}</label>
					<div class="controls">
						<textarea class="input-xlarge" id="p_meta_description" cols="" rows="5" name="{{ form.meta_description.vars.full_name }}">{% if form.meta_description.vars.value %}{{ form.meta_description.vars.value }}{% else %}{% if pageMetas['meta_description'] is defined %}{{ pageMetas['meta_description'].metaValue }}{% endif %}{% endif %}</textarea>
					</div>
				</div>
			</div>
		</div>
		<div class="form-actions">
			<input type="hidden" name="{{ form._token.vars.full_name }}" value="{{ form._token.vars.value }}" />
			<button type="submit" class="btn btn-primary">{% trans from 'admin' %}fulgurio.lightcms.save{% endtrans %}</button>
			<a href="{{ cancelPath }}" class="btn">{% trans from 'admin' %}fulgurio.lightcms.cancel{% endtrans %}</a>
		</div>
	</fieldset>
</form>
{% endblock %}

{% block title %}{% if pageId is defined %}{% trans from "admin" %}fulgurio.lightcms.pages.edit_form.title{% endtrans %}{% else %}{% trans from "admin" %}fulgurio.lightcms.pages.add_form.title{% endtrans %}{% endif %}{% endblock %}

{% if pageId is defined %}
{%   set legend = 'fulgurio.lightcmsblog.posts.edit_form.legend' %}
{%   set action = path('AdminPostsEdit', { 'pageId' : pageId} ) %}
{% else %}
{%   set legend = 'fulgurio.lightcmsblog.posts.add_form.legend' %}
{%   set action = path('AdminPostsAdd') %}
{% endif %}
{%   set cancelPath = path('AdminPosts') %}

{% block javascriptBottom %}
{% if wysiwyg is defined %}
{%   include wysiwyg.admin_footer with { 'config': wysiwyg.config, 'idElt': 'textarea.wysiwyg' } %}
{% endif %}
{% endblock %}